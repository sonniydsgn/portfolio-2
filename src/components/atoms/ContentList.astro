---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'ul'> {
	class?: string
}

const { class: className, ...rest } = Astro.props
---

<ul class:list={['list-reset', 'content-list', className]} {...rest}>
	<slot />
</ul>

<style>
	.content-list {
		display: flex;
		flex-direction: column;
		gap: 8px;
	}
</style>
