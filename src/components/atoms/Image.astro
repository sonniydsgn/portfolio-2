---
import type { ImageMetadata } from 'astro'
import { Picture } from 'astro:assets'

interface Props {
	src: ImageMetadata
	alt: string
}

const { src: img, alt, ...props } = Astro.props
---

<Picture src={img} alt={alt} formats={['webp', 'avif']} {...props} />

<style>
	picture img {
		display: flex;
		border-radius: var(--br-primary);
	}
</style>
