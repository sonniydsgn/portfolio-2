---
import type { Video } from '@/types'
import VideoContainer from './VideoContainer.astro'

interface Props extends Video {
	title?: string
}

const { title, ...props } = Astro.props
---

{
	title ? (
		<figure>
			<VideoContainer {...props}>
				<slot />
			</VideoContainer>
			<figcaption>{title}</figcaption>
		</figure>
	) : (
		<VideoContainer {...props}>
			<slot />
		</VideoContainer>
	)
}
