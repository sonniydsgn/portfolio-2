---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'ul'>, HTMLAttributes<'ol'> {
	class?: string
	tag?: 'ul' | 'ol' | 'div'
}

const { tag: Element = 'ul', class: className, ...rest } = Astro.props
---

<Element class:list={[{ 'list-reset': Element !== 'div' }, 'content-list', className]} {...rest}>
	<slot />
</Element>

<style>
	.content-list {
		display: flex;
		flex-direction: column;
		gap: 8px;
	}
</style>
