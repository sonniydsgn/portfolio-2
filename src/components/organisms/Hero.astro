---
import Section from '@/components/atoms/Section.astro'

interface Props {
	title: string
	title_secondary?: string
	desc: string
	tag?: typeof Section | 'header'
	class?: string
	centered?: boolean
}

const {
	title,
	title_secondary,
	desc,
	tag: Element = Section,
	class: className,
	centered = false,
	...props
} = Astro.props
---

<Element class:list={['hero', { 'hero--centered': centered }, className]} {...props}>
	<h1 class="text-h1 hero__title">
		{title}
		{title_secondary && <span class="text-h1 text-h1--secondary">{title_secondary}</span>}
	</h1>
	<p class="text-subtitle hero__subtitle">
		{desc}
	</p>
	<slot />
</Element>

<style>
	.hero {
		display: flex;
		flex-direction: column;
		margin-block-end: 48px;

		.hero__subtitle {
			max-width: 420px;
		}
	}

	.hero--centered {
		align-items: center;
		text-align: center;

		.hero__subtitle {
			max-width: 820px;
		}
	}

	.hero__title {
		margin-block-end: 24px;
	}
</style>
